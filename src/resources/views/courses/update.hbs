<div class="container">
    <form action="/courses/{{course._id}}?_method=PUT" method="POST">
        <div class="col-lg-9">
            <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" name="name" id="name">
            </div>
            <div class="mb-3">
            <label for="description" class="form-label">Mô tả khóa học</label>
            <input type="text" class="form-control" value="{{course.description}}"name="description" id="description">
            </div>
            <div class="mb-3">
            <label for="image" class="form-label">Link hình ảnh</label>
            <input type="text" class="form-control"value="{{course.image}}" name="image" id="image">
            </div>
            <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId" id="videoId">
            </div>
    </div>
    <div class="col-lg-3">
        <button type="submit">Sửa Khóa Học</button>
    </div>
    </form>
</div>